
<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="flyhigh.flyhigh_ui.controller.VendorCatalog"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:c="flyhigh.flyhigh_ui.util">
	<Page title="Vendor - Catalog" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<l:Grid position="Center" id="gridContainer">
				<c:VBSpan span="2"/>
				<c:VBSpan span="8">
					<Table id="tableContainer" itemPress="onCatalogItemPress" fixedLayout="false">
						<headerToolbar>
							<OverflowToolbar>
								<content>
									<Title text="Your Catalog"/>
									<ToolbarSpacer/>
									<Button icon="sap-icon://add" press="onAddItem"/>
								</content>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column hAlign="Center"><Text text="Model"/></Column>
							<Column hAlign="Center"><Text text="Price"/></Column>
							<Column hAlign="Center"><Text text="Desc."/></Column>
							<Column hAlign="Center"><Text text="Disc."/></Column>
						</columns>
						<items/>
					</Table>
				</c:VBSpan>
				<c:VBSpan/>
			</l:Grid>
		</content>
	</Page>
</mvc:View>