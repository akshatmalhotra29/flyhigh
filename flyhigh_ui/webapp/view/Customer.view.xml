<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="flyhigh.flyhigh_ui.controller.Customer"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:c="flyhigh.flyhigh_ui.util">
	<Page title="Customer">
		<content>
			<l:Grid position="Center" id="gridContainer">
				<c:VBSpan span="3"/>
				<c:VBSpan span="6">
					<Title id="welcomeTitle"/>
					<GenericTile class="fullWidth" header="Trips" subheader="Browse your Trips" press="onPressTrips"/>
					<GenericTile header="Browse the Catalog" subheader="Inbound" class="fullWidth" press="onPressCatalog"/>
					<Table id="discountTableContainer" headerText="Active Discounts for you" itemPress="onDiscountItemPress">
						<columns>
							<Column hAlign="Center"><Text text="Model"/></Column>
							<Column hAlign="Center"><Text text="Category"/></Column>
							<Column hAlign="Center"><Text text="Desc."/></Column>
							<Column hAlign="Center"><Text text="Price"/></Column>
							<Column hAlign="Center"><Text text="Discount Price"/></Column>
						</columns>
						<items/>
					</Table>
				</c:VBSpan>
				<c:VBSpan/>
			</l:Grid>
		</content>
	</Page>
</mvc:View>