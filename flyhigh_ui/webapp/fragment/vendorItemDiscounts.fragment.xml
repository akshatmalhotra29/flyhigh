<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:c="flyhigh.flyhigh_ui.util">
	<Dialog title="Add Item to your Catalog">
		<content>
			<c:VBSpan id="viewItemDiscountsContainer">
				<Table id="tableItemDiscounts" mode="Delete" delete="onDeleteItemDiscount">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<Title id="viewItemDiscountsTitle"/>
								<ToolbarSpacer/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column hAlign="Center"><Text text="Start Date"/></Column>
						<Column hAlign="Center"><Text text="End Date"/></Column>
						<Column hAlign="Center"><Text text="Absolute Discount"/></Column>
						<Column hAlign="Center"><Text text="Percentage Discount"/></Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{startdate}"/>
								<Text text="{enddate}"/>
								<Text text="{discountabsolute}"/>
								<Text text="{discountpercentage}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</c:VBSpan>
		</content>
		<beginButton>
			<Button text="OK" press="onViewItemDiscountsButton"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>