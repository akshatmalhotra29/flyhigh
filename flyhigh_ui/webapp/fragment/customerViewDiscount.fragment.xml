<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:c="flyhigh.flyhigh_ui.util">
	<Dialog title="Your Discounts">
		<content>
			<c:VBSpan id="viewItemDiscountsContainer">
				<Table id="tableItemDiscounts">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<Title id="viewItemDiscountsTitle"/>
								<ToolbarSpacer/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column hAlign="Center"><Text text="Start Date"/></Column>
						<Column hAlign="Center"><Text text="End Date"/></Column>
						<Column hAlign="Center"><Text text="Absolute Discount"/></Column>
						<Column hAlign="Center"><Text text="Percentage Discount"/></Column>
						<Column hAlign="Center"><Text text="Discounted Price"/></Column>
					</columns>
					<items/>
				</Table>
			</c:VBSpan>
		</content>
		<beginButton>
			<Button text="OK" press="onViewItemDiscountsButton"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>